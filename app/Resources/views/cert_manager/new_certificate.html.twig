{% extends 'base.html.twig' %}



{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-8 col-md-offset-2">
                <div class="panel panel-default">
                    <div class="panel-heading">Create Certificate</div>
                    <div class="panel-body">
                        {{ form_start(form) }}
                        <div class="form_group">
                        <div class="col-md-8 col-md-offset-2">
                        {{ form_row(form.name, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        </div>

                        <div class="form_group">
                        <div class="col-md-8 col-md-offset-2">
                        {{ form_row(form.email, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        </div>

                        <div class="form_group">
                            <div class="col-md-8 col-md-offset-2">
                                {{ form_row(form.additional) }}
                            </div>
                        </div>

                        <div class="form_group">
                        <div class="col-md-8 col-md-offset-2">
                        {{ form_row(form.common_name, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        </div>

                        <div class="form_group">
                        <div class="col-md-8 col-md-offset-2">
                        {{ form_row(form.organization, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        </div>

                        <div class="form_group">
                            <div class="col-md-8 col-md-offset-2">
                                {{ form_row(form.organization_unit, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>

                        <div class="form_group">
                            <div class="col-md-8 col-md-offset-2">
                                {{ form_row(form.country, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>

                        <div class="form_group">
                            <div class="col-md-8 col-md-offset-2">
                                {{ form_row(form.state, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>

                        <div class="form_group">
                            <div class="col-md-8 col-md-offset-2">
                                {{ form_row(form.advanced) }}
                            </div>
                        </div>

                        <div class="form_group">
                            <div class="col-md-8 col-md-offset-2">
                                {{ form_row(form.key_type, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>

                        <div class="form_group">
                            <div class="col-md-8 col-md-offset-2">
                                {{ form_row(form.key_size, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>



                        <div class="form-group">
                        <div class="col-md-8 col-md-offset-2" style="margin-top:5px;">
                        <button type="submit" class="btn btn-primary">
                        <i class="fa fa-btn fa-user"></i> Create
                        </button> <br>
                        </div>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}