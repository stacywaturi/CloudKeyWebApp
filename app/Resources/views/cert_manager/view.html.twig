{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-md-10 col-md-offset-1">
            <div class="panel panel-success">
                <div class="panel-heading">View</div>

                {% if app.user != null %}
                <table class="table">
                    <tr>

                        <th>Version </th>
                        <th>Activated</th>
                        <th>Expiry</th>
                    </tr>

                    {% for array in certificates %}
                        <tr>
                        {% for value in array %}
                            <td>{{ value }}</td>
                        {% endfor %}
                        </tr>
                    {% endfor %}
                </table>

            </div>

            <div class="form-group">
                <div class="col-md-6 col-md-offset-0">
                    <form action='' method='post'>
                        <button type="submit" name="renew" class="btn btn-primary">
                            <i class="fa fa-btn"></i>Renew
                        </button><br> <br>
                        <button type="submit"  name="view_key"class="btn btn-primary">
                            <i class="fa fa-btn"></i>View Key
                        </button><br> <br>
                        <button type="submit" name="view_cert" class="btn btn-primary">
                            <i class="fa fa-btn"></i>View Certificate
                        </button><br> <br>
                        <button type="submit" name="delete" class="btn btn-primary">
                            <i class="fa fa-btn"></i>Delete
                        </button><br> <br>

                    </form>

                </div>
                {% endif %}


                {% if app.user == null %}
                    <a href="/login" class="btn btn-info">Login.. >></a>
                {% endif %}
            </div>
        </div>
    </div>
    {% endblock %}


